@model IEnumerable<Product>;

<div class="row pb-3">
	@foreach (var product in Model)
	{
		<div class="col-lg-3 col-md-6 p-4">
			<div class="row p2">
				<div class="col-12 p-1" style="border:1px solid #008cba;border-radius:5px;">
					<div class="card">
						<img src="@product.ImageUrl" class="card-img-top rounded" style="height:250px" />
						<div class="card-body">
							<div class="pl-1">
								<p class="card-title h5 text-primary">@product.Title</p>
								<p class="card-title h5 text-info">by @product.Author</p>
							</div>
							<div class="pl-1">
								<p> List Price: <strike>@product.ListPrice.ToString("c")</strike></p>
							</div>
							<div class="pl-1">
								<p> As low as: <b>@product.Price100.ToString("c")</b></p>
							</div>
						</div>

						<div>
							<a class="btn btn-primary form-control" asp-action="Details" asp-route-productId="@product.Id">
								Details
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>