@using BookStore.Utility;
@model OrderViewModel
<partial name="_Notification"></partial>
<form method="post">
	<input asp-for="OrderHeader.Id" hidden readonly />
	<br />

	<div class="container bg-white">
		<div class="card">
			<div class="card-header bg-dark text-light ml-0 row container">
				<div class="col-12 d-none d-md-block col-md-6 pb-1">
					<i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
				</div>

				<div class="col-12 col-md-4 offset-md-2 text-right">
					<a class="btn btn-outline-info form-control btn-sm">Back to Orders</a>
				</div>
			</div>

			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6 pb-4">
							<div class="row">
								<h4 class="d-flex justify-content-between align-content-center mb-3">
									<span class="text-primary">PickUp Details</span>
								</h4>
							</div>

							<div class="row my-1">
								<div class="col-3">Name</div>
								<div class="col-9">
									@if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
									{
										<input asp-for="OrderHeader.Name" class="form-control" type="text" />
										<span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
									}
									else
									{
										<input asp-for="OrderHeader.Name" readonly class="form-control" type="text" />
									}
								</div>
							</div>

							<div class="row my-1">
								<div class="col-3">Phone</div>
								<div class="col-9">
									@if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
									{
										<input asp-for="OrderHeader.PhoneNumer" class="form-control" type="text" />
										<span asp-validation-for="OrderHeader.PhoneNumer" class="text-danger"></span>
									}
									else
									{
										<input asp-for="OrderHeader.PhoneNumer" readonly class="form-control" type="text" />
									}
								</div>
							</div>

							<div class="row my-1">
								<div class="col-3">Address</div>
								<div class="col-9">
									@if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
									{
										<input asp-for="OrderHeader.StreetAddress" class="form-control" type="text" />
										<span asp-validation-for="OrderHeader.StreetAddress" class="text-danger"></span>
									}
									else
									{
										<input asp-for="OrderHeader.StreetAddress" readonly class="form-control" type="text" />
									}
								</div>
							</div>

							<div class="row my-1">
								<div class="col-3">City</div>
								<div class="col-9">
									@if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
									{
										<input asp-for="OrderHeader.City" class="form-control" type="text" />
										<span asp-validation-for="OrderHeader.City" class="text-danger"></span>
									}
									else
									{
										<input asp-for="OrderHeader.City" readonly class="form-control" type="text" />
									}
								</div>
							</div>

							<div class="row my-1">
								<div class="col-3">State</div>
								<div class="col-9">
									@if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
									{
										<input asp-for="OrderHeader.State" class="form-control" type="text" />
										<span asp-validation-for="OrderHeader.State" class="text-danger"></span>
									}
									else
									{
										<input asp-for="OrderHeader.State" readonly class="form-control" type="text" />
									}
								</div>
							</div>

							<div class="row my-1">
								<div class="col-3">Postal Code</div>
								<div class="col-9">
									@if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
									{
										<input asp-for="OrderHeader.PostalCode" class="form-control" type="text" />
										<span asp-validation-for="OrderHeader.PostalCode" class="text-danger"></span>
									}
									else
									{
										<input asp-for="OrderHeader.PostalCode" readonly class="form-control" type="text" />
									}
								</div>
							</div>

							<div class="row my-1">
								<div class="col-3">Email</div>
								<div class="col-9">
									<input asp-for="OrderHeader.ApplicationUser.Email" readonly class="form-control" type="text" />
								</div>
							</div>


							<div class="row my-1">
								<div class="col-3">Order Date</div>
								<div class="col-9">
									<input value="@Model.OrderHeader.OrderDate.ToShortDateString() readonly class="form-control" type="text" />
								</div>
							</div>

							<div class="row my-1">
								<div class="col-3">Carrier</div>
								<div class="col-9">
									@if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
									{
										<input asp-for="OrderHeader.Carrier" class="form-control" type="text" />
									}
									else
									{
										<input asp-for="OrderHeader.Carrier" readonly class="form-control" type="text" />
									}
								</div>
							</div>

							<div class="row my-1">
								<div class="col-3">Tracking</div>
								<div class="col-9">
									@if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
									{
										<input asp-for="OrderHeader.TrackingNumer" class="form-control" type="text" />
									}
									else
									{
										<input asp-for="OrderHeader.TrackingNumer" readonly class="form-control" type="text" />
									}
								</div>
							</div>


							<div class="row my-1">
								<div class="col-3">Shopping Date</div>
								<div class="col-9">
									<input value="@Model.OrderHeader.ShippingDate.ToShortDateString()" readonly class="form-control" type="text" />
								</div>
							</div>

							@if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
							{
								<div class="row my-1">
									<div class="col-3">Session Id</div>
									<div class="col-9">
										<input asp-for="OrderHeader.SeassionId" readonly class="form-control" type="text" />
									</div>
								</div>

								<div class="row my-1">
									<div class="col-3">Payment Intend ID</div>
									<div class="col-9">
										<input asp-for="OrderHeader.PaymentIntentId" readonly class="form-control" type="text" />
									</div>
								</div>
							}


							<div class="row my-1">
								@if (Model.OrderHeader.SeassionId == null)
								{
									<div class="col-3">Payment Due Date</div>
									<div class="col-9">
										<input value="@Model.OrderHeader.PaymentDueDate.ToShortDateString()" readonly class="form-control" type="text" />
									</div>
								}
								else
								{
									<div class="col-3">Payment Date</div>
									<div class="col-9">
										<input value="@Model.OrderHeader.PaymentDate?.ToShortDateString()" readonly class="form-control" type="text" />

									</div>
								}
							</div>

							<div class="row my-1">
								<div class="col-3">Payment Status</div>
								<div class="col-9">
									<input asp-for="OrderHeader.PaymentStatus" class="form-control" readonly type="text" />
								</div>
							</div>


							<button type="submit" asp-action="UpdateOrderDetail" class="btn btn-warning form-control" formmethod="post">
								Update Your Details
							</button>

						</div>

						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-primary">Order Summary</span>
							</h4>
							<label class="btn btn-outline-primary form-control my-2">Order Status - @Model.OrderHeader.OrderStatus</label>

							<ul class="list-group mb-3">

								@foreach (var details in Model.OrderDetails)
								{
									<li class="list-group-item d-flex justify-content-between p-2">
										<div class="row container">
											<div class="col-8">
												<h6 class="my-0 text-primary">@details.Product.Title</h6>
												<small class="text-muted">Price: @details.Price.ToString("c")</small> <br />
												<small class="text-muted">Quantity: @details.Count</small>
											</div>
											<div class="col-4">
												<p class="text-success">@((details.Count * details.Price).ToString("c"))</p>
											</div>
										</div>
									</li>
								}


								<li class="list-group-item bg-info">
									<div class="row container">
										<div class="col-6">
											<h5 class="text-white">Total</h5>
										</div>
										<div class="col-6 text-right">
											<h5 class="text-white">@Model.OrderHeader.OrderTotal.ToString("c")</h5>
										</div>
									</div>
								</li>
							</ul>

							@if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
							{
								if (Model.OrderHeader.OrderStatus == SD.StatusApprove)
								{
									<input type="submit" class="btn btn-primary form-control my-1" value="Start Processing" />
								}

								if (Model.OrderHeader.OrderStatus == SD.StatusInProgress)
								{
									<input type="submit" class="btn btn-primary form-control my-1" value="Ship Order" />
								}

								if (Model.OrderHeader.OrderStatus == SD.PaymentStatusDelayedPayment &&
								Model.OrderHeader.OrderStatus == SD.StatusShipped)
								{
									<input type="submit" class="btn btn-success form-control my-1" value="Pay Now" />
								}

								if (Model.OrderHeader.OrderStatus != SD.StatusRefunded ||
								Model.OrderHeader.OrderStatus != SD.StatusCancelled)
								{
									<input type="submit" class="btn btn-danger form-control my-1" value="Cancel Order" />
								}

							}

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>