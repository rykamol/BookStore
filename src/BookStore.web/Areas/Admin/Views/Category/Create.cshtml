@using BookStore.Domain.Models;
@model Category
<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary"> Create Category</h2>
			<hr />
		</div>
		@*<div class="text-danger" asp-validation-summary="All"></div>*@

		<div class="form-group mb-3">
			<label asp-for="Name" class="control-label"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="form-group mb-3">
			<label asp-for="DisplayOrder" class="control-label"></label>
			<input asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<div class="form-group mb-3">
			<label asp-for="Description" class="control-label"></label>
			<textarea asp-for="Description" class="form-control"></textarea>
		</div>
		 

		<button class="btn btn-primary" type="submit" style="width: 150px"> Create </button>
		<a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Back to List</a>
	</div>
</form>
@section Scripts{
	<partial name="_ValidationScriptsPartial"></partial>
}
